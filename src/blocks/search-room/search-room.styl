.search-room
    margin 0 auto
    max-width 1160px
    height 1357px
    display flex

    &_margin_top
        margin-top 30px

.dots
    position absolute
    z-index 5
    bottom 15px
    right 15px

    span 
        display inline-block
        width 7.5px
        height 7.5px
        border: 1px solid #FFFFFF;
        border-radius 50%
        margin-left 3.75px

    span:nth-child(1)
        background #fff


.h5

    &__extra-convenience
        position relative

    &__material-icons
        position absolute
        top -5px
        right 10px
        color $colorGray50


.filter
    width 270px

    &__dates
        position relative

    &__input
        width 266px
        margin-top 5px

    &__material-icons
        position absolute
        color $colorGray50
        text-align: center;
        top 30px
        right 10px

    &__guest
        position relative
        margin-top 20px

    &__price
        margin-top 30px

    &__range-price
        display flex
        justify-content space-between

    &__price-input
        margin-top 23px

    &__price-output
        Font(Montserrat ,12px, 15px, normal)
        color $colorGray50

    &__price-info
        Font(Montserrat ,12px, 14px, normal)
        color $colorGray50
        margin-top 12px

    &__checkbox
        margin-top 30px

        &-input
            position absolute
            opacity 0

            &:checked + .filter__checkbox-label:after
                opacity 1

            &:checked + .filter__checkbox-label:before
                border: 1px solid $colorViolet

        &-div
            margin-top 12px
            margin-left 30px

            &_margin_top17
                margin-top 17px

    &__checkbox-label
        position relative
        Font(Montserrat ,14px, 18px, normal)
        color $colorGray50
        cursor pointer
        
        &_style_bold
            font-weight bold
            color $colorGray75

        &:before
            content ''
            display block
            position absolute
            width: 20px;
            height: 20px;
            left -30px
            top -3px
            border: 1px solid $colorGray25
            border-radius: 4px;

        &:after
            content ''
            display block
            position absolute
            width: 6px;
            height: 8px;
            left -23px
            top 1px
            border-right: 2px solid $colorViolet
            border-bottom: 2px solid $colorViolet
            transform: rotate(45deg);
            opacity 0
            




    &__availability
        margin-top 30px

    &__descripton
        Font(Montserrat ,12px, 14px, normal)
        color $colorGray50
        margin-top 5px

    &__convenience
        position relative
        margin-top 30px

    &__extra-convenience
        margin-top 30px

.variables
    width 100%
    position relative
    height 100%

    &_margin-left
        margin-left 59px

    &__rooms
        display flex
        flex-wrap wrap
        justify-content space-between

    &__text
        Font(Quicksand, 24px, 30px, bold)
        margin-bottom 20px

    &__wrapper
        width: 270px;
        height: 257px;
        margin-bottom 20px

    &__img
        position relative
        overflow hidden

        &:hover .material-icons_arrow_right
            right 0px

        &:hover .material-icons_arrow_left
            left 0px



        & img 
            border-radius 4px 4px 0 0

    &__info

        padding 20px 17px 19px 20px

        & section
            display flex
            justify-content space-between
            align-items center

        & section:nth-child(1)
            padding-bottom 10px
            border-bottom 1px solid rgba(31, 32, 65, 0.1);

        & section:nth-child(2)
            padding-top 8px


    &__stars

        width 120px

    &__number
        Font(Quicksand ,18px, 17px, bold)

        & span:nth-child(1)
            font-size 14px

        & span:nth-child(3)
            h5Font(Montserrat ,12px, 15px, bold)
            color $colorViolet

    &__price
        Font(Montserrat ,14px, 18px, bold)
        color $colorGray50

        & span:nth-child(2)
            font-weight normal
            font-size 12px

    &__review
        Font(Montserrat ,14px, 18px, bold)
        color $colorGray50

        & span:nth-child(2)
            font-weight normal
            font-size 12px

    &__list 
        width 250px
    
        & li
            display inline-block
            width: 40px;
            height: 40px;
            border-radius: 22px;
            text-align center
            padding-top 12px
            Font(Montserrat ,12px, 15px, normal)

        & li:nth-child(1)
            background: $colorVioletGrad
            font-weight bold

            & a
                color #fff 

    &__switch
        position absolute
        left 50%
        transform translate(-50%, 0)
        bottom 70px

        & section:nth-child(1) 
            position relative

        & section:nth-child(2) 
            Font(Montserrat ,14px, 24px, normal)
            color $colorGray75
            text-align center
            margin-top 10px



.material-icons

    &__star
        background $colorVioletGrad
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent

    &_arrow_right, &_arrow_left
        display block
        width: 42px;
        height: 151px;
        padding-top 60px
        position absolute
        top 49%
        transform translate(0%, -50%)
        color #fff
        z-index 5
        transition .25s ease
        cursor pointer
        text-align center
        box-shadow: inset 20px 0px 20px 0px $colorGray25;

    &_arrow_right
        right -40px
        box-shadow: inset -20px 0px 20px 0px $colorGray25;

    &_arrow_left
        left -40px

    &__variables
        position absolute
        display block
        width: 40px
        height: 40px
        background: linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%);
        border-radius: 22px;
        color #fff
        text-align center
        padding-top 8px
        left 215px
        top 0