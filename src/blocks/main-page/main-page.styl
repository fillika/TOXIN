.main-page
    position relative
    height 830px
    overflow hidden

    &__img
        position absolute
        top: -70px;


    &__container
        height 100%
        position relative
        margin 0 auto
        max-width 1160px
        align-items center

    &__rectangle
        height 375px
        top 70px
        padding 40px 30px 30px 30px

    &__text
        position absolute
        right 0
        bottom 18px
        width 285px
        text-align right
        Font(Montserrat ,14px, 24px, normal)
        color $colorGray75

.rectangle

    &__wrap
        width 320px

    &__find-room
        Font(Quicksand, 24px, 30px, bold)

    &__date
        display flex
        justify-content space-between
        margin-top 20px

    &__input
        width 150px
        margin-top 5px

        &_width320
            width 320px

    &__button
        position relative
        width 320px
        height 44px
        background $colorVioletGrad
        padding-top 14px
        color #Fff
        margin-top 30px

    &__material-icons
        position absolute
        width: 44px;
        height: 44px;
        font-size: 24px;
        color $colorGray50
        text-align: center;
        top 32px
        right 0px

        &-arrow
            position absolute
            right 14px
            top 10px

    &__guest
        margin-top 20px
        

    &__check-out, &__check-in, &__guest
        position relative